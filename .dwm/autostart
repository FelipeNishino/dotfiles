#!/bin/sh

# add your autostart stuffs here

if [ -n "$(xrandr | grep "Virtual" | awk "{print {1}")" ]; then
	if [ -n "$(echo $HOST_LOCATION)" ]; then
		xrandr --newmode "1600x900_60.00" 118.25 1600 1696 1856 2112 900 903 908 934 -hsync +vsync
		xrandr --addmode Virtual-1 1600x900_60.00
		xrandr --output Virtual-1 --mode 1600x900_60.00
	else
		xrandr --output Virtual-1 --mode 1920x1080
	fi
else
	if [ -e "$(echo $HOST_LOCATION)" ]; then
		xrandr --output DP-1 --mode 1920x1080 --rate 144 --pos 0x0 --rotate inverted
		xrandr --output HDMI-2 --mode 1920x1080 --rate 144 --pos 1920x0
	fi
fi

# Add Background
# xwallpaper --center ~/.wallpapers/15.png &
feh --bg-scale ~/.wallpapers/15.png &

eval $(gnome-keyring-daemon --start)
export SSH_AUTH_SOCK

# Xresources
xrdb merge ~/.Xresources

# Set Layout to US international
setxkbmap -layout us -variant alt-intl

# Disable Screensaver
# xset -dpms s off &

# Notify
dunst -config ~/.config/dunst/dunstrc &

# Clipboard
xclip &

# Activate numlock
numlockx on &
# Run compositor
picom &

if [ -e "$(echo $HOST_LOCATION)" ]; then
	discord &
fi

mullvad-vpn &
bitwarden-desktop &

# run bar script and dwm ( do not remove this )
~/.dwm/bar/./bar.sh &
exec dbus-launch dwm
 
